<h1>Listing posts</h1>

<table>
  <tr>
    <th>Text</th>
    <th>Posted on</th>
    <th>Poster</th>
    <th>Topic</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.text %></td>
    <td><%= post.posted_on %></td>
    <td><%= post.poster_id %></td>
    <td><%= post.topic %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
