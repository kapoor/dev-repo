<p id="notice"><%= notice %></p>

<table>
  <tr>
    <th>Title</th>
    <th>Posted on</th>
    <th>Posted by</th>
    <th></th>
    <th></th>
  </tr>

  <tr>
    <td><%= @topic.title %></td>
    <td><%= @topic.posted_on %></td>
    <td><%= @topic.poster_id %></td>
    <td><%= link_to 'Edit', edit_topic_path(@topic) %></td>
    <td><%= link_to 'Destroy', @topic, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
</table>


<h2>Posts</h2>
<table>
  <tr>
    <th>Title</th>
    <th>Posted on</th>
    <th>Posted by</th>
    <th></th>
    <th></th>
  </tr>

  <% @topic.posts.each do |post| %>
  <tr>
    <td><%= post.text %></td>
    <td><%= post.posted_on %></td>
    <td><%= post.poster_id %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
  <% end %>

</table>


<b>Add a post</b>
<%= form_for([@topic, @topic.posts.build]) do |f| %>
	<div class="field">
	  <%= f.label :text %><br />
	  <%= f.text_field :text %>
	</div>
	<div class="field">
	  <%= f.label :posted_on %><br />
	  <%= f.datetime_select :posted_on %>
	</div>
	<div class="field">
	  <%= f.label :poster_id %><br />
	  <%= f.number_field :poster_id %>
	</div>
	<div class="actions">
	  <%= f.submit %>
	</div>
<% end %>

<%= link_to 'Edit', edit_topic_path(@topic) %> |
<%= link_to 'Back', topics_path %>
