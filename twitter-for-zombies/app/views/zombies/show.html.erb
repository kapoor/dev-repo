<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @zombie.name %>
</p>

<p>
  <b>Graveyard:</b>
  <%= @zombie.graveyard %>
</p>

<h2>Tweets</h2>
<table>
  <tr>
    <th>Status</th>
    <th>Zombie</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @zombie.tweets.each do |tweet| %>
  <tr>
    <td><%= tweet.status %></td>
    <td><%= tweet.zombie %></td>
    <td><%= link_to 'Show', tweet %></td>
    <td><%= link_to 'Edit', edit_tweet_path(tweet) %></td>
    <td><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


<b>Add a Tweet</b>
<%= form_for([@zombie, @zombie.tweets.build]) do |f| %>
<div class="field">
  <%= f.label :status %><br />
  <%= f.text_field :status %>
</div>
<div class="field">
  <%= f.label :zombie %><br />
  <%= f.text_field :zombie %>
</div>
<div class="actions">
  <%= f.submit %>
</div>
<% end %>


<%= link_to 'Edit', edit_zombie_path(@zombie) %> |
<%= link_to 'Back', zombies_path %>
